@model IEnumerable<CarrosWebApp.Models.ModeloCarro>

<h1>Modelos de Carros</h1>

<p>
    <a href="@Url.Action("Create")">Criar Novo Modelo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Ano</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Marca</td>
            <td>@item.Modelo</td>
            <td>@item.Ano</td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.Id })">Editar</a> |
                <a href="@Url.Action("Details", new { id = item.Id })">Detalhes</a> |
                <a href="@Url.Action("Delete", new { id = item.Id })">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
